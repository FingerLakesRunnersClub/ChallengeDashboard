@using FLRC.AgeGradeCalculator
@using FLRC.ChallengeDashboard
@model ResultsViewModel
@{ ViewBag.Title = $"{Model.ResultType} â€” {Model.Course.Name}"; }

<h2>@Model.Course.Name</h2>
<h4>@Model.Course.Distance (@Model.Course.Type)</h4>

<p>
@if (Model.ResultType == ResultType.Fastest)
{
    <b>Fastest</b>
}
else
{
    <a href="/Course/@Model.Course.ID/Fastest/@Model.Category">Fastest</a>
}
|
@if (Model.ResultType == ResultType.MostRuns)
{
    <b>Most Runs</b>
}
else
{
    <a href="/Course/@Model.Course.ID/MostRuns/@Model.Category">Most Runs</a>
}
|
@if (Model.ResultType == ResultType.BestAverage)
{
    <b>Best Average</b>
}
else
{
    <a href="/Course/@Model.Course.ID/BestAverage/@Model.Category">Best Average</a>
}
</p>

<p>
@if (Model.Category == null)
{
    <b>All</b>
}
else
{
    <a href="/Course/@Model.Course.ID/@Model.ResultType">All</a>
}
|
@if (Model.Category == Category.M)
{
    <b>M</b>
}
else
{
    <a href="/Course/@Model.Course.ID/@Model.ResultType/M">M</a>
}
|
@if (Model.Category == Category.F)
{
    <b>F</b>
}
else
{
    <a href="/Course/@Model.Course.ID/@Model.ResultType/F">F</a>
}
</p>