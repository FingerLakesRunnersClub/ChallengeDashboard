@using FLRC.ChallengeDashboard
@model AthleteViewModel

<h2>@Model.Athlete.Name</h2>
<h3>Age: @Model.Athlete.Age</h3>
<h4>Team: @Model.Athlete.Team.Display</h4>

<div class="row">
    @foreach (var course in Model.Results.Where(r => r.Value.Any()))
    {
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            @await Html.PartialAsync("CourseInfo", course.Key)

            <table class="table table-striped table-bordered table-sm text-center">
                <thead>
                    <tr>
                        <th># of Runs</th>
                        <th>Fastest Time</th>
                        <th>Average Time</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            @course.Value.Count()
                        </td>
                        <td>
                            @course.Value.Min(r => r.Duration).Display
                        </td>
                        <td>
                            @(new Time(TimeSpan.FromSeconds(course.Value.Average(r => r.Duration.Value.TotalSeconds))).Display)
                        </td>
                    </tr>
                </tbody>
            </table>

            <details>
                <summary>All Runs</summary>
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Time</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var result in course.Value.OrderBy(r => r.StartTime))
                        {
                            <tr>
                                <td>
                                    @result.StartTime?.ToString("MM/dd/yyyy")
                                </td>
                                <td>
                                    @result.Duration.Display
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </details>
        </div>
    }
</div>